@model Movie
@{
    ViewData["Title"] = Model.Name;
}
<div class="text-center">
    @if (Model is null)
    {
        <h1 class="display-4">Не найдено информации по фильму. Редактирование невозможно.</h1>
    }
    else
    {
        <div class="text-center">
            <form class="form-example" asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="text" class="invisible" value="@Model.Id" />
                <input asp-for="Name" type="text" class="display-4" value="@Model.Name" />
                <hr />
                <div class="container">
                    <div class="row text-left">
                        <div class="col-sm-3">
                            @if (Model.Poster != null)
                            {
                                <img class="infoImg img-fluid" alt="Не найдено" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Poster))" />
                            }
                            else
                            {
                                <img alt="Не найдено" src="" />
                            }
                            <div class=" orm-group mt-2">
                                <input type="file" asp-for="Poster" class="form-control-file" />

                            </div>
                        </div>

                        <div class="col-lg-8">
                            <h3 class="text-left">
                                <label asp-for="Description"></label>
                            </h3>
                            <textarea type="text" asp-for="Description" class="w-100 h-50">@Model.Description</textarea>
                            <h5 class="text-left">
                                <label asp-for="YearOfIssue"></label>
                            </h5>
                            <input asp-for="YearOfIssue" type="number" value="@Model.YearOfIssue">
                            <h5 class="text-left">
                                <label asp-for="Director"></label>
                            </h5>
                            <input asp-for="Director" class="align-self-sm-start" type="text" value="@Model.Director" />
                            <div class="form-group mt-3">
                                <input type="submit" value="Сохранить" class="btn btn-primary" />
                            </div>
                        </div>
                        
                    </div>
                </div>
            </form>
        </div>
    }
</div>
